generator client {
  provider = "prisma-client-js"
  output   = "../api/lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Expense {
  id          String   @id @default(cuid())
  amount      Float
  currency    String   @default("QAR")
  category    String
  date        String // YYYY-MM-DD
  description String
  createdAt   DateTime @default(now())
}

model Income {
  id        String   @id @default(cuid())
  source    String
  amount    Float
  currency  String   @default("QAR")
  date      String // YYYY-MM-DD
  type      String // salary, freelance, gift, other
  notes     String?
  createdAt DateTime @default(now())
}

model Obligation {
  id       String  @id @default(cuid())
  name     String
  amount   Float
  currency String  @default("QAR")
  dueDate  String // YYYY-MM-DD
  category String
  active   Boolean @default(true)

  payments ObligationPayment[]
}

model ObligationPayment {
  id           String     @id @default(cuid())
  obligationId String
  obligation   Obligation @relation(fields: [obligationId], references: [id], onDelete: Cascade)
  monthKey     String // YYYY-MM
  amountPaid   Float
  datePaid     String
}

model Budget {
  id                String @id @default(cuid())
  monthKey          String @unique // YYYY-MM
  limitAmount       Float  @default(5000)
  currency          String @default("QAR")
  categoryLimits    String @default("{}") // JSON string
  warningThreshold  Int    @default(75)
  criticalThreshold Int    @default(90)
}

model OpeningSavings {
  id                  String @id @default(cuid())
  year                Int    @unique
  cashUSD             Float  @default(0)
  usdToQarRate        Float  @default(3.65)
  goldGrams           Float  @default(0)
  goldPricePerGramQAR Float  @default(0)
  totalOpeningQAR     Float  @default(0)
}

model Settings {
  id       String @id @default("default")
  currency String @default("QAR")
}
