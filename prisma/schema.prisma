generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Expense {
  id          String   @id @default(cuid())
  amount      Float
  currency    String   @default("QAR")
  category    String
  date        String
  description String
  createdAt   DateTime @default(now())
}

model Income {
  id        String   @id @default(cuid())
  source    String
  amount    Float
  currency  String   @default("QAR")
  date      String
  type      String
  notes     String?
  createdAt DateTime @default(now())
}

model Obligation {
  id       String              @id @default(cuid())
  name     String
  amount   Float
  currency String              @default("QAR")
  dueDate  String
  category String
  active   Boolean             @default(true)
  payments ObligationPayment[]
}

model ObligationPayment {
  id           String     @id @default(cuid())
  obligationId String
  obligation   Obligation @relation(fields: [obligationId], references: [id], onDelete: Cascade)
  monthKey     String
  amountPaid   Float
  datePaid     String
}

model Budget {
  id                String @id @default(cuid())
  monthKey          String @unique
  limitAmount       Float  @default(5000)
  currency          String @default("QAR")
  categoryLimits    String @default("{}")
  warningThreshold  Int    @default(75)
  criticalThreshold Int    @default(90)
}

model OpeningSavings {
  id                  String @id @default(cuid())
  year                Int    @unique
  cashUSD             Float  @default(0)
  usdToQarRate        Float  @default(3.65)
  goldGrams           Float  @default(0)
  goldPricePerGramQAR Float  @default(0)
  totalOpeningQAR     Float  @default(0)
}

model Settings {
  id       String @id @default("default")
  currency String @default("QAR")
}
